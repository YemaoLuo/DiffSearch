+        if (oname != null) {
+            return oname.toString();
+        } else {
+            return null;
+        }
+    }
+
+    public void setRegistry(Registry registry) {
+        this.registry = registry;
+    }
+
+    public Registry getRegistry() {
+        // XXX Need a better solution - to avoid the static
+        if( registry == null )
+            registry=Registry.getRegistry();
+
+        return registry;
+    }
